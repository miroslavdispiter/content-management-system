<Page x:Class="content_management_system.Pages.AddEditObrenovicPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:content_management_system.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Title="AddEditObrenovicPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <TextBlock
            Text="ADD"
            Grid.Row="0"
            Grid.Column="1"
            Foreground="#C9B037"
            FontFamily="Agency FB"
            FontSize="40"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"/>

        <TextBlock 
            Text="Name:"
            Grid.Row="1"
            Grid.Column="0"
            Margin="40,0,20, 10"
            Foreground="#C9B037"
            FontFamily="Agency FB"
            FontSize="22"
            FontWeight="Bold"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"/>

        <TextBox 
            x:Name="txtName"
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,0,0,5"
            Width="300"
            Height="25"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="16"
            FontFamily="Times New Roman"
            Background="#F0E9D5" 
            Foreground="#2F2F2F" 
            BorderBrush="#C9B037"
            ToolTip="Enter the full name (recommended format: Firstname Lastname)."
            BorderThickness="2"/>

        <TextBlock
            x:Name="NameError"
            Grid.Row="1"
            Grid.Column="1"
            Text=""
            Margin="16,0,0,0"
            FontSize="16"
            FontFamily="Agency FB"
            Foreground="#FF0000"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"/>

        <TextBlock 
            Text="Year of Birth:"
            Grid.Row="2"
            Grid.Column="0"
            Margin="40,5,10,5"
            Foreground="#C9B037"
            FontFamily="Agency FB"
            FontSize="22"
            FontWeight="Bold"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"/>

        <TextBlock
            x:Name="YearOfBirthError"
            Grid.Row="2"
            Grid.Column="1"
            Text=""
            FontSize="16"
            Margin="16,0,0,8"
            FontFamily="Agency FB"
            Foreground="#FF0000"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"/>

        <TextBox 
            x:Name="txtBirthYear" 
            Grid.Row="2"
            Grid.Column="1"
            Width="300"
            Height="25"
            MaxLength="4" 
            FontSize="16"
            VerticalAlignment="Top"
            Margin="0,6,0,0"
            FontFamily="Times New Roman" 
            Background="#F0E9D5" 
            Foreground="#2F2F2F" 
            BorderBrush="#C9B037"
            BorderThickness="2" 
            ToolTip="Enter the year of birth using four digits (e.g. 1860)."
            InputScope="Number"/>

        <Image 
            x:Name="imgPreview" 
            Grid.Row="2"
            Grid.Column="2"
            Grid.RowSpan="4"
            Width="150" 
            Height="150" 
            Stretch="Uniform"/>

        <Button 
            Grid.Row="1"
            Grid.Column="2"
            Content="Choose picture" 
            Width="150"
            Height="40" 
            Margin="10,0,0,5" 
            Background="#800000" 
            Foreground="#F5F5DC" 
            BorderBrush="#C9B037" 
            BorderThickness="1" 
            Cursor="Hand"
            FontFamily="Agency FB" 
            FontSize="22"
            ToolTip="Select an image to represent the dynasty member"
            Click="BtnBrowse_Click"/>

        <TextBlock 
            Text="" 
            Grid.Row="5"
            Grid.Column="0"
            Margin="40,0,20,5"
            Foreground="#C9B037"
            FontFamily="Agency FB"
            FontSize="22"
            FontWeight="Bold"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"/>

        <xctk:ColorPicker 
            x:Name="colorPickerText" 
            Grid.Row="5"
            Grid.Column="1"
            Width="150"
            Height="23"
            VerticalAlignment="Top"
            Background="#F0E9D5"
            BorderBrush="#C9B037"
            BorderThickness="2"
            ToolTip="Change the text color of the description"
            SelectedColorChanged="ColorPickerText_SelectedColorChanged"/>

        <TextBlock
            x:Name="DescriptionError"
            Grid.Row="5"
            Grid.Column="1"
            Text=""
            Margin="0,30,0,0"
            FontSize="16"
            FontFamily="Agency FB"
            Foreground="#FF0000"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"/>

        <TextBlock 
            Text="Description:" 
            Grid.Row="3"
            Grid.Column="0"
            Grid.RowSpan="2"
            Width="100" 
            Margin="40,0,20,5"
            Foreground="#C9B037"
            FontFamily="Agency FB"
            FontSize="22"
            FontWeight="Bold"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"/>

        <DockPanel 
            Grid.Row="3"
            Grid.Column="1"
            Grid.RowSpan="2"
            Height="120"
            Width="300">
            <ToolBar 
                DockPanel.Dock="Top" 
                Background="#F0E9D5" 
                BorderBrush="#C9B037" 
                BorderThickness="1">
                <ToggleButton 
                    Command="EditingCommands.ToggleBold" 
                    Content="𝗕"
                    FontSize="16"
                    Background="#F0E9D5"
                    Foreground="#2F2F2F"
                    Width="15"
                    ToolTip="Bold"
                    Click="BoldButton_Click"/>

                <ToggleButton 
                    Command="EditingCommands.ToggleItalic" 
                    ToolTip="Italic"
                    Content="𝘐"
                    FontSize="16"
                    Background="#F0E9D5"
                    Foreground="#2F2F2F"
                    Width="15"
                    Click="ItalicButton_Click"/>

                <ToggleButton 
                    Command="EditingCommands.ToggleUnderline" 
                    ToolTip="Underline"
                    Content="U̲"
                    FontSize="16"
                    Background="#F0E9D5"
                    Foreground="#2F2F2F"
                    Width="15"
                    Click="UnderlineButton_Click"/>
                <ComboBox
                    x:Name="cbFontFamily" 
                    Width="150"
                    Margin="10,0,0,0"
                    Background="#F0E9D5"
                    Foreground="#2F2F2F"
                    BorderBrush="#C9B037"
                    BorderThickness="1"
                    FontFamily="Times New Roman"
                    FontSize="14"
                    ToolTip="Select font family for the description"
                    SelectionChanged="CbFontFamily_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock 
                                Text="{Binding}" 
                                FontFamily="{Binding}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <ComboBox 
                    x:Name="cbFontSize" 
                    Width="50" 
                    Margin="5,0,0,0"
                    Background="#F0E9D5"
                    Foreground="#2F2F2F"
                    BorderBrush="#C9B037"
                    BorderThickness="1"
                    FontFamily="Times New Roman"
                    FontSize="14"
                    ToolTip="Select font size for the description"
                    SelectionChanged="CbFontSize_SelectionChanged">
                    <ComboBoxItem Content="10"/>
                    <ComboBoxItem Content="12"/>
                    <ComboBoxItem Content="14"/>
                    <ComboBoxItem Content="16"/>
                    <ComboBoxItem Content="18"/>
                    <ComboBoxItem Content="20"/>
                    <ComboBoxItem Content="24"/>
                    <ComboBoxItem Content="28"/>
                    <ComboBoxItem Content="32"/>
                    <ComboBoxItem Content="36"/>
                    <ComboBoxItem Content="48"/>
                </ComboBox>
            </ToolBar>

            <RichTextBox 
                x:Name="rtbDescription" 
                KeyUp="RtbDescription_KeyUp"
                Background="#F0E9D5"
                Foreground="#2F2F2F"
                BorderBrush="#C9B037"
                BorderThickness="2"
                FontFamily="Times New Roman"
                ToolTip="Enter a detailed description. You can format the text using the toolbar above."
                FontSize="14"/>
        </DockPanel>

        <Label 
            x:Name="lblWordCount" 
            Grid.Row="6"
            Grid.Column="1"
            Content="Number of words: 0" 
            Foreground="#C9B037"
            FontFamily="Agency FB"
            FontSize="22"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>

        <Button 
            x:Name="btnAdd" 
            Grid.Row="6"
            Grid.Column="2"
            Content="Add"
            Margin="40,15,10,5"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Width="100"
            Background="#800000" 
            Foreground="#F5F5DC"
            BorderBrush="#C9B037" 
            BorderThickness="1" 
            Cursor="Hand"
            FontFamily="Agency FB" 
            FontSize="22"
            ToolTip="Save the entered dynasty member data"
            Click="BtnAdd_Click"/>

        <Button
            x:Name="btnCancel"
            Grid.Row="6"
            Grid.Column="2"
            Content="Cancel" 
            Width="100" 
            Margin="10,15,40,5"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Background="#800000"
            Foreground="#F5F5DC"
            BorderBrush="#C9B037" 
            BorderThickness="1"
            Cursor="Hand"
            FontFamily="Agency FB" 
            FontSize="22" 
            ToolTip="Cancel and return to the list"
            Click="BtnCancel_Click"/>
    </Grid>
</Page>