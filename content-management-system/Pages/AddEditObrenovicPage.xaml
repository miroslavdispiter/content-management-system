<Page x:Class="content_management_system.Pages.AddEditObrenovicPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:local="clr-namespace:content_management_system.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditObrenovicPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel 
            Orientation="Horizontal" 
            Margin="0,0,0,10">
            <TextBlock 
                Text="Ime:" 
                Width="100" 
                VerticalAlignment="Center"/>
            <TextBox 
                x:Name="txtName" 
                Width="300" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Datum rođenja:" Width="100" VerticalAlignment="Center"/>
            <DatePicker x:Name="datePickerBirth" Width="200"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <Image x:Name="imgPreview" Width="150" Height="150" Stretch="Uniform"/>
            <Button Content="Izaberi sliku" Width="120" Height="30" Margin="10,0,0,0" Click="BtnBrowse_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10,0,10">
            <TextBlock Text="Boja teksta:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <xctk:ColorPicker x:Name="colorPickerText" Width="150" SelectedColorChanged="ColorPickerText_SelectedColorChanged"/>
        </StackPanel>

        <DockPanel Grid.Row="4">
            <ToolBar DockPanel.Dock="Top">
                <ToggleButton Command="EditingCommands.ToggleBold" ToolTip="Bold">B</ToggleButton>
                <ToggleButton Command="EditingCommands.ToggleItalic" ToolTip="Italic">I</ToggleButton>
                <ToggleButton Command="EditingCommands.ToggleUnderline" ToolTip="Underline">U</ToggleButton>

                <ComboBox 
                    Width="150" 
                    Margin="10,0,0,0"
                    x:Name="cbFontFamily"
                    SelectionChanged="CbFontFamily_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontFamily="{Binding}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <ComboBox Width="60" Margin="5,0,0,0"
                          x:Name="cbFontSize"
                          SelectionChanged="CbFontSize_SelectionChanged">
                    <ComboBoxItem Content="10"/>
                    <ComboBoxItem Content="12"/>
                    <ComboBoxItem Content="14"/>
                    <ComboBoxItem Content="16"/>
                    <ComboBoxItem Content="18"/>
                    <ComboBoxItem Content="20"/>
                    <ComboBoxItem Content="24"/>
                    <ComboBoxItem Content="28"/>
                    <ComboBoxItem Content="32"/>
                    <ComboBoxItem Content="36"/>
                    <ComboBoxItem Content="48"/>
                </ComboBox>
            </ToolBar>
            <RichTextBox x:Name="rtbDescription" KeyUp="RtbDescription_KeyUp" />
        </DockPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Label x:Name="lblWordCount" Content="Broj reči: 0" Margin="0,0,20,0"/>
            <Button x:Name="btnAdd" Content="Dodaj" Width="100" Click="BtnAdd_Click"/>
            <Button x:Name="btnOtkazi" Content="Otkaži" Width="100" Margin="10,0,0,0" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Page>
