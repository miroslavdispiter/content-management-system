<Page x:Class="content_management_system.Pages.TablePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:content_management_system.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TablePage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DataGrid
            x:Name="ObrenoviciDataGrid"
            Grid.Row="1"
            Margin="5"
            AutoGenerateColumns="False"
            IsReadOnly="True"
            CanUserAddRows="False"
            ItemsSource="{Binding Obrenovici}">
            <DataGrid.Columns>
                <DataGridTemplateColumn 
                    x:Name="SelectColumn" 
                    Width="50">
                    <DataGridTemplateColumn.Header>
                        <CheckBox
                            x:Name="SelectAllCheckBox"
                            Content="✓"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Click="SelectAllCheckBox_Click" />
                    </DataGridTemplateColumn.Header>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox
                                IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Click="RowCheckBox_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Ime" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Hyperlink Click="NameHyperlink_Click">
                                    <Run Text="{Binding Name}" />
                                </Hyperlink>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Slika" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding ImageSource}" Stretch="UniformToFill"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Datum rođenja" Binding="{Binding DateOfBirth}" Width="150" />

                <DataGridTextColumn Header="Datum dodavanja" Binding="{Binding DateAdded}" Width="150" />

            </DataGrid.Columns>
        </DataGrid>


        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button
                x:Name="btn_Add"
                Content="Add" 
                Width="80" 
                Margin="5" 
                Visibility="Hidden"
                Click="AddButton_Click"/>
            <Button 
                x:Name="btn_Delete"
                Content="Delete" 
                Width="80" 
                Margin="5" 
                Visibility="Hidden"
                Click="DeleteButton_Click"/>
            <Button 
                x:Name="btn_Logout"
                Content="Logout" 
                Width="80" 
                Margin="5" 
                Click="LogoutButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
