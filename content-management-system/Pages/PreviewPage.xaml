<Page x:Class="content_management_system.Pages.PreviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:content_management_system.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PreviewPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock FontSize="18" FontWeight="Bold" Text="{Binding Name}" TextAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="10">
            <Image Source="{Binding ImageSource}" Width="150" Height="150" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="Datum rodjenja:" FontWeight="Bold"/>
            <TextBlock Text="{Binding DateOfBirth}" Margin="0,0,0,10"/>

            <TextBlock Text="Datum dodavanja:" FontWeight="Bold"/>
            <TextBlock Text="{Binding DateAdded}"/>
        </StackPanel>

        <Button Grid.Row="2" Content="Nazad" Width="80" HorizontalAlignment="Center" Margin="0,10,0,0" Click="Back_Click"/>
    </Grid>
</Page>
