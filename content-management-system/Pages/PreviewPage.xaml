<Page x:Class="content_management_system.Pages.PreviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:content_management_system.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PreviewPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock
            Text="{Binding Name}"
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,12,25,0"
            Foreground="#C9B037"
            FontSize="36" 
            FontWeight="Bold"
            FontFamily="Agency FB"
            TextAlignment="Center"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>

        <Image 
            Grid.Row="1"
            Grid.Column="1"
            Grid.RowSpan="2"
            Source="{Binding ImgPath}" 
            Margin="100,0,0,0"
            Width="350" 
            Height="275" 
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Stretch="Uniform"/>

        <TextBlock
            Text="Year of Birth:" 
            Grid.Row="1"
            Grid.Column="0"
            Foreground="#C9B037"
            FontWeight="Bold"
            FontSize="24"
            FontFamily="Agency FB"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,0,100,0"/>
        <TextBlock 
            Text="{Binding DateOfBirth}"
            Grid.Row="1"
            Grid.Column="0"
            Foreground="#C9B037"
            FontWeight="Bold"
            FontSize="24"
            FontFamily="Agency FB"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="75,0,0,0"/>

        <TextBlock 
            Text="Date Added:" 
            Grid.Row="1"
            Grid.Column="0"
            Foreground="#C9B037"
            FontWeight="Bold"
            FontSize="24"
            FontFamily="Agency FB"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="0,0,115,0"/>
        <TextBlock 
            Text="{Binding DateAdded}"
            Grid.Row="1"
            Grid.Column="0"
            Foreground="#C9B037"
            FontWeight="Bold"
            FontSize="24"
            FontFamily="Agency FB"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="110,0,0,0"/>

        <TextBlock 
            Text="Description:" 
            Grid.Row="1"
            Grid.Column="0"
            Foreground="#C9B037"
            FontWeight="Bold"
            FontSize="24"
            FontFamily="Agency FB"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Margin="0,0,110,0"/>

        <RichTextBox 
            x:Name="rtbDescription" 
            Grid.Row="2"
            Grid.Column="0"
            Width="250"
            Height="120"
            Margin="0,0,10,80"
            Background="#F0E9D5"
            Foreground="#2F2F2F"
            BorderBrush="#C9B037"
            BorderThickness="2"
            FontFamily="Times New Roman"
            FontSize="14"
            IsReadOnly="True"
            IsDocumentEnabled="False"/>

        <Button 
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Content="Back"
            HorizontalAlignment="Center" 
            VerticalAlignment="Bottom"
            Margin="0,0,0,30"
            Width="100"
            Height="40"
            Background="#800000"
            Foreground="#F5F5DC"
            BorderBrush="#C9B037"
            BorderThickness="1"
            Cursor="Hand"
            FontFamily="Agency FB"
            FontSize="22"
            ToolTip="Return to the previous page"
            Click="Back_Click"/>
    </Grid>
</Page>
