<Page x:Class="content_management_system.Pages.PreviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:content_management_system.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PreviewPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <StackPanel 
            Grid.Row="0" 
            Grid.Column="0" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Margin="20">
            <TextBlock 
                Text="{Binding Name}" 
                Foreground="#C9B037"
                FontSize="36" 
                FontWeight="Bold"
                FontFamily="Agency FB" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"/>

            <TextBlock 
                Text="Year of Birth:" 
                Foreground="#C9B037" 
                FontWeight="Bold" 
                FontSize="24" 
                FontFamily="Agency FB" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Margin="0,20,0,5"/>

            <TextBlock 
                Text="{Binding DateOfBirth}" 
                Foreground="#C9B037" 
                FontWeight="Bold" 
                FontSize="24" 
                FontFamily="Agency FB" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top"/>

            <TextBlock 
                Text="Date Added:" 
                Foreground="#C9B037" 
                FontWeight="Bold" 
                FontSize="24" 
                FontFamily="Agency FB" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Margin="0,20,0,5"/>

            <TextBlock 
                Text="{Binding DateAdded}" 
                Foreground="#C9B037" 
                FontWeight="Bold" 
                FontSize="24" 
                FontFamily="Agency FB" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top"/>
        </StackPanel>

        <Image 
            x:Name="imgPreview" 
            Grid.Row="0" 
            Grid.Column="1" 
            Source="{Binding ImgPath}" 
            HorizontalAlignment="Center"
            VerticalAlignment="Center" 
            Stretch="Uniform" 
            Margin="10" 
            Width="250" 
            Height="250"/>

        <TextBlock 
            Text="Description" 
            Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
            Foreground="#C9B037" 
            FontWeight="Bold" 
            FontSize="28" 
            FontFamily="Agency FB" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Margin="0,20,0,10"/>

        <TextBlock 
            x:Name="txtDescription" 
            Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
            Text="Loading description..." 
            Foreground="#2F2F2F" 
            FontFamily="Times New Roman" 
            FontSize="16" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Top"
            TextWrapping="Wrap" 
            Margin="10"/>

        <Button 
            Grid.Row="3" 
            Grid.ColumnSpan="2" 
            Content="Back" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Margin="0,20,0,20" 
            Width="100" 
            Height="40" 
            Background="#800000" 
            Foreground="#F5F5DC" 
            BorderBrush="#C9B037" 
            BorderThickness="1" 
            Cursor="Hand"
            FontFamily="Agency FB" 
            FontSize="22" 
            ToolTip="Return to the previous page" 
            Click="Back_Click"/>
    </Grid>
</Page>
