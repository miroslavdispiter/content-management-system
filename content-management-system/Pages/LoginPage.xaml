<Page x:Class="content_management_system.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:content_management_system.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Title="LoginPage">

    <Grid 
        Margin="40" 
        VerticalAlignment="Center" 
        HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Text="LOG IN"
            FontSize="40"
            FontFamily="Agency FB"
            FontWeight="Bold"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Foreground="#C9B037"
            Margin="0,0,0,20"/>

        <TextBlock
            Grid.Row="1"
            Text="Username:"
            FontWeight="SemiBold"
            FontFamily="Agency FB"
            FontSize="22"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="0,0,0,0"
            Foreground="#C9B037"/>

        <TextBox
            x:Name="UsernameTextBox"
            Grid.Row="2"
            FontSize="19"
            FontFamily="Agency FB"
            Height="45"
            Margin="0,0,0,10"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Background="#F0E9D5"
            Foreground="#2F2F2F"
            BorderBrush="#C9B037"
            BorderThickness="2"
            Padding="5"
            VerticalContentAlignment="Center">
        </TextBox>
        
        <TextBlock
            x:Name="UsernameError"
            Grid.Row="3"
            Text=""
            FontSize="14"
            FontFamily="Agency FB"
            Foreground="#FF0000"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="10,5,0,0"/>

        <!-- Password Label -->
        <TextBlock
            Grid.Row="4"
            Text="Password:"
            FontWeight="SemiBold"
            FontSize="22"
            FontFamily="Agency FB"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="0,0,0,0"
            Foreground="#C9B037"/>

        <!-- PasswordBox -->
        <PasswordBox
            x:Name="PasswordBox"
            Grid.Row="5"
            FontSize="19"
            FontFamily="Agency FB"
            Height="45"
            Margin="0,0,0,10"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Background="#F0E9D5"
            Foreground="#2F2F2F"
            BorderBrush="#C9B037"
            BorderThickness="2"
            Padding="5"
            VerticalContentAlignment="Center"/>

        <TextBlock
            x:Name="PasswordError"
            Grid.Row="6"
            Text=""
            FontSize="16"
            FontFamily="Agency FB"
            Foreground="#FF0000"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="10,5,0,0"/>
        
        <StackPanel
            Grid.Row="7"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="0,20,0,0">
            <Button
                Content="Login"
                Width="120"
                Height="45"
                Margin="0,0,20,0"
                Click="Login_Click"
                Background="#800000"
                Foreground="#F5F5DC"
                FontFamily="Agency FB"
                FontSize="22"
                BorderBrush="#C9B037"
                BorderThickness="2"
                Padding="5"
                Cursor="Hand"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button
                Content="Exit"
                Width="120"
                Height="45"
                Click="Exit_Click"
                Background="#800000"
                Foreground="#F5F5DC"
                FontFamily="Agency FB"
                FontSize="22"
                BorderBrush="#C9B037"
                BorderThickness="2"
                Padding="5"
                Cursor="Hand"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</Page>
