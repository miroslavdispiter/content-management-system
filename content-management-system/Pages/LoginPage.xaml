<Page x:Class="content_management_system.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:content_management_system.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.6*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.6*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock
            Text="LOG IN"
            Grid.Row="1"
            Grid.Column="1"
            FontSize="40"
            FontFamily="Agency FB"
            FontWeight="Bold"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="0, 20, 110, 0"
            Foreground="#C9B037"/>

        <TextBlock
            Text="Username:"
            Grid.Row="2"
            Grid.Column="1"
            FontWeight="SemiBold"
            FontFamily="Agency FB"
            FontSize="22"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Foreground="#C9B037"/>

        <TextBox
            x:Name="UsernameTextBox"
            Grid.Row="3"
            Grid.Column="1"
            Width="260"
            Height="40"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="16"
            FontFamily="Times New Roman"
            Background="#F0E9D5"
            Foreground="#2F2F2F"
            BorderBrush="#C9B037"
            BorderThickness="2"
            VerticalContentAlignment="Center">
        </TextBox>

        <TextBlock
            x:Name="UsernameError"
            Grid.Row="4"
            Grid.Column="1"
            Text=""
            FontSize="16"
            FontFamily="Agency FB"
            Foreground="#FF0000"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"/>

        <TextBlock
            Text="Password:"
            Grid.Row="5"
            Grid.Column="1"
            FontWeight="SemiBold"
            FontSize="22"
            FontFamily="Agency FB"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Foreground="#C9B037"/>
        <PasswordBox
            x:Name="PasswordBox"
            Grid.Row="6"
            Grid.Column="1"
            Width="260"
            Height="40"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontSize="16"
            FontFamily="Agency FB"
            Background="#F0E9D5"
            Foreground="#2F2F2F"
            BorderBrush="#C9B037"
            BorderThickness="2"
            VerticalContentAlignment="Center"/>
        <TextBlock
            x:Name="PasswordError"
            Grid.Row="7"
            Grid.Column="1"
            Text=""
            FontSize="16"
            FontFamily="Agency FB"
            Foreground="#FF0000"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"/>

        <Button
            Content="Login"
            Grid.Row="8"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Width="100"
            Height="40"
            Background="#800000"
            Foreground="#F5F5DC"
            BorderBrush="#C9B037"
            BorderThickness="1"
            Cursor="Hand"
            FontFamily="Agency FB"
            FontSize="22"
            Click="Login_Click"
            />

        <Button
            Content="Exit"
            Grid.Row="8"
            Grid.Column="1"
            Margin="50, 0, 0, 0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="100"
            Height="40"
            Background="#800000"
            Foreground="#F5F5DC"
            BorderBrush="#C9B037"
            BorderThickness="1"
            Cursor="Hand"
            FontFamily="Agency FB"
            FontSize="22"
            Click="Exit_Click"/>
    </Grid>
</Page>
